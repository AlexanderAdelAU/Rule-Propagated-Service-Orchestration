digraph Minimal_BTSN {
    rankdir=LR;
    node [fontname="Arial"];
    edge [fontname="Arial"];
    
    // Input Transition (blue rectangle) - Synchronization
    node [shape=rect, style=filled, fillcolor=lightblue, width=1.4, height=0.7];
    T_in [label="T_in\nSync [buf:40]", buffer=40];
    
    // Single Place (green circle) - Service with 1:1 relationship
    node [shape=circle, style=filled, fillcolor=lightgreen, width=1.1, height=1.1];
    P [label="P\nService"];
    
    // Output Transition (orange rectangle) - Distribution
    node [shape=rect, style=filled, fillcolor=orange, width=1.4, height=0.7];
    T_out [label="T_out\nDistribute"];
    
    // External nodes
    node [shape=doublecircle, fillcolor=yellow, width=0.8, height=0.8];
    START [label="START"];
    END [label="END"];
    
    // === MINIMAL BTSN FLOW ===
    // Single building block: T_in ? P ? T_out
    START -> T_in [label="input" ];
    T_in -> P [label="token"];
    P -> T_out [label="result"];
    T_out -> END [label="output"];
    
    // Mathematical model description
    label="Minimal BTSN - Single Place Model\n\n" +
          "Architectural Constraint: |•P| = 1 ? |P•| = 1\n" +
          "Building Block: T_in ? P ? T_out\n\n" +
          "Components:\n" +
          "• T_in: Input transition (synchronization coordinator)\n" +
          "• P: Service execution place\n" +
          "• T_out: Output transition (distribution coordinator)\n\n" +
          "This is the atomic unit of BTSN architecture\n" +
          "that maintains all formal constraints.";
    
    fontsize=10;
}